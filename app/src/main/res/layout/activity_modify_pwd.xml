<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_modify_pwd"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liu.easyoffice.Activity.ModifyPwdActivity">
    <com.liu.easyoffice.MyView.MyTitleBar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:text="修改密码"
        app:leftImagResource="@mipmap/back"
        >
    </com.liu.easyoffice.MyView.MyTitleBar>
    <com.liu.easyoffice.widget.ClearWriteEditText
        android:id="@+id/new_password"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rc_ed_public_service_search_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="新密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#666"
        android:textColorHint="#666" />
    <com.liu.easyoffice.widget.ClearWriteEditText
        android:id="@+id/confirm_new_password"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rc_ed_public_service_search_selector"
        android:focusable="true"
        android:inputType="textPassword"
        android:focusableInTouchMode="true"
        android:hint="确认新密码"
        android:singleLine="true"
        android:textColor="#666"
        android:textColorHint="#666"
        />
    <Button
        android:id="@+id/modify_password_submit"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="24dip"
        android:background="@drawable/rp_login_selector"
        android:text="提交"
        android:textColor="#FFFFFF" />
</LinearLayout>
