<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:layout_height="wrap_content"

  >
<TextView
    android:id="@+id/tv_dia_che_title"
android:paddingTop="20dp"
android:text="你确定要撤销申请吗"
  android:gravity="center"
    android:paddingBottom="20dp"

    android:textColor="@color/toolbar_blue"
    android:textSize="16sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_underline"/>
    <LinearLayout

        android:id="@+id/rl_dia_che_down"
        android:layout_below="@id/tv_dia_che_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:text="取消"
            android:textColor="#000"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/tv_chexiao_cancel"
            android:background="@drawable/chexiaodia_left_selector"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:text="确定"
            android:textColor="#000"
           android:gravity="center"
            android:background="@drawable/listview_item_bg_color_selector"
android:id="@+id/tv_chexiao_agree"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" /></LinearLayout>
</RelativeLayout>