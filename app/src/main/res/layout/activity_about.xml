<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liu.easyoffice.Activity.AboutActivity">
    <include
        android:id="@+id/about_include"
        layout="@layout/title_bar_common"></include>
    <ImageView
        android:layout_below="@id/about_include"
        android:id="@+id/about_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/logomy"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/about_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_logo"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="类钉钉 1.0"/>

    <RelativeLayout
        android:background="@drawable/shape_topandunder_line"
        android:layout_below="@id/about_text"
        android:id="@+id/about_check"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="检查新版本"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/about_check_iv"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/enter"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_underline"
        android:layout_below="@id/about_check"
        android:id="@+id/about_team"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="团队"/>
        <TextView
            android:id="@+id/about_team_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four Bat"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shape_underline"
        android:layout_below="@id/about_team"
        android:id="@+id/about_our"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        >
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="版本信息"/>
        <TextView
            android:id="@+id/about_our_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类钉钉 v1.0"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            />
    </RelativeLayout>


</RelativeLayout>
