<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_sign_main_backgroud">

    <RelativeLayout
        android:id="@+id/weekRelativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/selectImage1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/selectweek"/>

        <TextView
            android:id="@+id/weekTextview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/selectImage1"
            android:text="每周一"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/onTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/location_flag1"
            android:text="00:00"
            android:textColor="@color/green"
            android:textSize="24sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/location_flag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/offTime1"
            android:text="-"
            android:textSize="24sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/offTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="00:00"
            android:textColor="@color/green"
            android:textSize="24sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/rest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="休息"
            android:textSize="18sp"/>

    </RelativeLayout>
    <View
        android:id="@+id/strip_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/weekRelativelayout"
        android:background="#C0C5C7"/>

</RelativeLayout>
