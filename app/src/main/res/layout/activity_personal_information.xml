<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_personal_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.liu.easyoffice.Activity.PersonalInformationActivity"
    android:orientation="vertical">
    <include
        android:id="@+id/announcement_include"
        layout="@layout/title_bar_common"></include>

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:background="@drawable/shape_underline"
        android:id="@+id/activity_personal_information_head_img"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="头像"/>
        <TextView
            android:id="@+id/personal_tv_imgUrl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity_personal_information_head_img_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/enter"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/personal_default_head"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/activity_personal_information_head_img_right"
            android:layout_toStartOf="@+id/activity_personal_information_head_img_right"
            android:id="@+id/textView" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shape_underline"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/activity_personal_information_head_img"
        android:id="@+id/activity_personal_information_name"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="名字"/>
        <TextView
            android:id="@+id/activity_personal_information_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未填写"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/activity_personal_information_name_right"
            />
        <ImageView
            android:id="@+id/activity_personal_information_name_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/enter"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shape_underline"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/activity_personal_information_name"
        android:id="@+id/activity_personal_information_sex"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="性别"/>
        <TextView
            android:id="@+id/activity_personal_information_sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/activity_personal_information_sex_right"
            />
        <ImageView
            android:id="@+id/activity_personal_information_sex_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/enter"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shape_underline"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/activity_personal_information_sex"
        android:id="@+id/activity_personal_information_birth"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="生日"/>
        <TextView
            android:id="@+id/activity_personal_information_birth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1991-01-24"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/activity_personal_information_birth_right"
            />
        <ImageView
            android:id="@+id/activity_personal_information_birth_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/enter"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shape_underline"
        android:layout_below="@id/activity_personal_information_birth"
        android:id="@+id/activity_personal_information_area"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="地区"/>
        <TextView
            android:id="@+id/activity_personal_information_area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江苏-苏州"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/activity_personal_information_area_right"
            />
        <ImageView
            android:id="@+id/activity_personal_information_area_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/enter"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <!--<Button-->
        <!--android:id="@+id/personal_btn_confirm"-->
        <!--android:text="提交"-->
        <!--style="@style/confirm_btn_bottom"-->
        <!--/>-->
</LinearLayout>
