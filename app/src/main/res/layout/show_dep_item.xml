<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/show_dep_parent_layout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/show_dep_item_rlt"
            android:layout_toLeftOf="@+id/show_dep_item_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/show_dep_item_gname"
                android:text="66666"
                style="@style/edit_tv_title"
                />
        </RelativeLayout>

        <View
            android:id="@+id/show_dep_item_view"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/show_dep_item_rlt_icon"
            android:layout_centerVertical="true"
            android:background="@color/deep_grey"
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/show_dep_item_rlt_icon"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/show_dep_item_iv_icon"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/show_dep_item_tv_icon"
                android:src="@mipmap/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/show_dep_item_tv_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="下级"
                android:textColor="@color/de_blue_clicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>