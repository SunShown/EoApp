<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_card"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:id="@+id/person_center_ll_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/toolbar_blue"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/contactmsgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/user_card_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:scaleType="fitCenter"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/emotion_003"/>
        <TextView
            android:id="@+id/user_card_name"
            android:drawableRight="@mipmap/user_card_man"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/user_card_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柴攀峰"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_alignLeft="@id/user_card_head"/>
    </RelativeLayout>
    <ScrollView
        android:paddingTop="15dp"
        android:layout_below="@id/person_center_ll_header"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="0dp"
        android:layout_weight="4">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--手机号-->
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/user_card_tel"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_underline">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:drawableLeft="@mipmap/card_mobile"
                        android:id="@+id/user_card_tel_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textSize="17dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/user_card_tel_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13196889273"
                        android:textSize="20dp"
                        android:textColor="#000"/>
                </LinearLayout>

                    <ImageView
                        android:id="@+id/user_card_phone"
                        android:layout_marginRight="10dp"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/user_card_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/user_card_telphone"/>
                    <ImageView
                        android:id="@+id/user_card_message"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@mipmap/user_card_message"/>
            </RelativeLayout>
            <!--<view-->
                <!--android:layout_marginLeft="22dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0.5dp"-->
                <!--android:background="#645656"/>-->
            <!--部门-->
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/user_card_departure"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_underline">
                <LinearLayout
                    android:id="@+id/departure_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="部门"
                    android:drawableLeft="@mipmap/card_departure4"
                    android:textSize="17dp"/>
                <TextView

                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:id="@+id/user_card_departure_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="技术部"
                    android:textSize="20dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/user_card_right"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/user_card_position"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_underline">
                <TextView
                    android:drawableLeft="@mipmap/card_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="职务"
                    android:textSize="17dp"/>
                <TextView
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:id="@+id/user_card_position_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="部门经理"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/user_card_birth"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_underline">
                <TextView
                    android:drawableLeft="@mipmap/card_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:id="@+id/user_card_birth_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1994-08-27"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/user_card_area"
                android:layout_marginLeft="25dp">
                <TextView
                    android:drawableLeft="@mipmap/card_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:id="@+id/user_card_area_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="江苏省-苏州市-吴中区"
                    android:textSize="20dp"/>
            </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/stat_chat"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/shape_topline"
        >

        <TextView
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/sendmessage"
            android:text="聊天"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_card_chat"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>


</LinearLayout>
