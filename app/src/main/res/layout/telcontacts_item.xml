<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/tel_contacts_item_letter"
            android:background="@color/grey"
            android:textSize="26sp"
            android:text="A"
            android:textColor="@color/deep_grey"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <RelativeLayout
            android:background="@drawable/tel_contacts_item_bg"
            android:paddingLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/tel_contacts_item_iv_title"
                android:src="@mipmap/emotion_003"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tel_contacts_item_iv_title"
                android:layout_marginLeft="10dp"
                android:id="@+id/tel_contacts_item_name"
                android:textSize="24sp"
                android:text="姓名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tel_contacts_item_name"
                android:layout_marginLeft="10dp"
                android:id="@+id/tel_contacts_item_number"
                android:text="1234567788"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tel_contacts_item_tv_groupmsg"
                android:text="已添加"
                android:textSize="14dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="添加"
                android:layout_gravity="end"
                android:id="@+id/tel_contacts_item_btn_add"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/tel_contacts_item_btn_bg"
                 />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>