<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_company"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liu.easyoffice.Activity.MyCompany">
    <include
        android:id="@+id/my_company_include"
        layout="@layout/title_bar_common"></include>
    <ImageView
        android:id="@+id/my_company_background"
        android:layout_below="@id/my_company_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mycompanyback"/>
    <ScrollView
        android:paddingTop="15dp"
        android:layout_below="@id/my_company_background"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--手机号-->
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/user_card_tel"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_underline">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:drawableLeft="@mipmap/mycompany_name"
                        android:id="@+id/user_card_tel_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司名称"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/my_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘氏集团"
                        android:textSize="20dp"
                        android:textColor="#000"/>
                </LinearLayout>
            </RelativeLayout>
            <!--<view-->
            <!--android:layout_marginLeft="22dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="#645656"/>-->
            <!--部门-->
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/user_card_departure"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_underline">
                <LinearLayout
                    android:id="@+id/departure_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="公司类型"
                        android:drawableLeft="@mipmap/mycompany_type"
                        android:textSize="17dp"/>
                    <TextView

                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:id="@+id/my_company_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="互联网"
                        android:textSize="20dp"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/user_card_birth"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_underline">
                <TextView
                    android:drawableLeft="@mipmap/card_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="创建时间"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:id="@+id/my_company_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1994-08-27"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/user_card_area"

                android:background="@drawable/shape_underline">
                <TextView
                    android:layout_marginLeft="25dp"
                    android:drawableLeft="@mipmap/card_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:id="@+id/my_company_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="江苏省-苏州市-吴中区"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
