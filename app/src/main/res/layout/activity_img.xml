<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#000"
    tools:context="com.liu.easyoffice.Activity.ImgActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/img_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
android:background="#404040"
        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

   <RelativeLayout
       android:id="@+id/rl_img_back"
       android:layout_width="wrap_content"

       android:layout_alignParentLeft="true"

       android:background="#404040"
       android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_back"
        android:layout_centerVertical="true"



        android:src="@mipmap/back"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


   </RelativeLayout>
        <View
            android:layout_toRightOf="@id/rl_img_back"
            android:layout_width="1px"
            android:background="#fff"
            android:layout_height="match_parent"
            />

   </android.support.v7.widget.Toolbar>
    <com.liu.easyoffice.MyView.PinchImageView
        android:layout_below="@id/img_toolbar"
        android:id="@+id/iv_main"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent" />
</RelativeLayout>
