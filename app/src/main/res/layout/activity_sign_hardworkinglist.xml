<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sign_confirm_grey">

    <ImageView
        android:id="@+id/hardworking_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:src="@drawable/hardworkinglist_icon"/>
    <TextView
        android:id="@+id/hardworking_textview"
        android:visibility="visible"
        android:layout_below="@+id/hardworking_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="发现勤奋的人"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <ListView
        android:id="@+id/hardworkinglist_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </ListView>
</RelativeLayout>
