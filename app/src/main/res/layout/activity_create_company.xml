<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_company"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5ccc"
    android:orientation="vertical"
    tools:context="com.liu.easyoffice.Activity.CreateCompany">

    <include
        android:id="@+id/create_company_include"
        layout="@layout/title_bar_common"></include>

    <RelativeLayout
        android:layout_above="@+id/app_sign_in_bt"
        android:layout_below="@id/create_company_include"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/create_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_topandunder_line"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/create_company_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="公司名称"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/create_company_name_tv"
                        style="?android:attr/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/create_company_name_title"
                        android:background="@null"
                        android:hint="请输入公司名称(必填)"
                        android:maxLines="1"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:textColorHint="#CCC"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/create_company_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_topandunder_line"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/create_company_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="公司类型"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/create_company_type_title_tv"
                        style="?android:attr/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/create_company_type_title"
                        android:background="@null"
                        android:hint="如：教育、互联网等"
                        android:maxLines="1"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:textColorHint="#CCC"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/create_company_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_topandunder_line"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/create_company_area_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="地区"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/create_company_area_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/create_company_area_tv_img"
                        android:text="江苏-苏州"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/create_company_area_tv_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/enter" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/create_company_person_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="团队成员（1人）"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/create_company_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_topandunder_line"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/create_company_add_member_re"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_underline">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@mipmap/create_company_add_member"
                            android:drawablePadding="5dp"
                            android:text="添加团队成员"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@mipmap/enter" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/create_company_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/create_company_add_member_re"
                        android:divider="#CCC"
                        android:dividerHeight="1dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/create_company_person_num_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="6人即可以创建完整队伍，创建成功之后会请通知其他成员"
                    android:textColor="#645656"
                    android:textSize="12sp" />
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
    <Button
        android:id="@+id/create_company_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rp_login_selector"
        android:text="立即创建公司"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</RelativeLayout>
