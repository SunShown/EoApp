<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_sign_main_backgroud">

    <RelativeLayout
        android:id="@+id/weekRelativelayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/portraitImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/check_portrait"/>

        <TextView
            android:id="@+id/nameTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/portraitImage"
            android:layout_toRightOf="@+id/portraitImage"
            android:text="姓名："
            android:textColor="@color/grey_text_address"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nameTextview"
            android:layout_toLeftOf="@+id/location_flag1"
            android:layout_below="@+id/nameTextview"
            android:layout_marginTop="5dp"
            android:text="部门:"
            android:textColor="@color/grey_text_address"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/workTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/workTimeTextview"
            android:gravity="center_vertical"
            android:text="平均工作时长："
            android:textColor="@color/grey_text_address"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/workTimeTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="660"
            android:textColor="@color/grey_text_address"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </RelativeLayout>
    <View
        android:id="@+id/strip_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/weekRelativelayout"
        android:background="#C0C5C7"/>

</RelativeLayout>
