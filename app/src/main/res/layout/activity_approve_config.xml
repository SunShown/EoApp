<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_approve_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.liu.easyoffice.Activity.ApproveConfigActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/appconfig_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/appconfig_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:drawableLeft="@mipmap/shenpi_fanhui"
            android:textColor="#fff"
            android:text="返回"
            android:textSize="20dp"
            android:layout_height="wrap_content" ></TextView>


        <TextView

            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="流程设置"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:id="@+id/tv_appcon_save"
            android:textColor="#fff"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"></TextView>
    </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ExpandableListView
        android:layout_below="@id/appconfig_toolbar"
        android:layout_width="match_parent"
        android:id="@+id/ex_appcon"
        android:layout_height="wrap_content"></ExpandableListView>

</RelativeLayout>
