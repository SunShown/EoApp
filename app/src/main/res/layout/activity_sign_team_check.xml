<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android_custom="http://schemas.android.com/apk/res-auto"
                xmlns:lgy_customStripProgressBar="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sign_confirm_grey">

    <ScrollView
        android:id="@+id/scrollview_team_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/inner_scrollview_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/month_hardworking_check_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/activity_sign_main_backgroud"
                android:clickable="true">

                <TextView
                    android:id="@+id/month_hardworking_check_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="10月排行榜"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/month_detailed_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/month_hardworking_check_textview"
                    android:layout_marginRight="30dp"
                    android:text="查看完整排行榜"
                    android:textColor="@color/green"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/check_right_point"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/month_detailed_textview"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/right_point_green_200"/>

                <RelativeLayout
                    android:id="@+id/three_image_relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/month_hardworking_check_textview"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/three_image_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/check_portrait1_relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/check_portrait1_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/check_portrait"/>

                            <ImageView
                                android:id="@+id/check_level1_image"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@+id/check_portrait1_image"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/check_first"/>

                            <TextView
                                android:id="@+id/check_level1_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/check_level1_image"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/check_level1_image"
                                android:text="虚位以待"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/check_portrait2_relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/check_portrait2_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/check_portrait"/>

                            <ImageView
                                android:id="@+id/check_level2_image"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@+id/check_portrait2_image"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/check_second"/>

                            <TextView
                                android:id="@+id/check_level2_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/check_level2_image"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/check_level2_image"
                                android:text="虚位以待"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/check_portrait3_relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/check_portrait3_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/check_portrait"/>

                            <ImageView
                                android:id="@+id/check_level3_image"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@+id/check_portrait3_image"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/check_third"/>

                            <TextView
                                android:id="@+id/check_level3_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/check_level3_image"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/check_level3_image"
                                android:text="虚位以待"/>
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/everyday_data_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_below="@+id/month_hardworking_check_relativelayout"
                android:layout_marginTop="20dp"
                android:background="@color/activity_sign_main_backgroud">

                <RelativeLayout
                    android:id="@+id/everyday_data_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/everyday_data_textview"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="每日数据"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <View
                        android:id="@+id/strip_line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/everyday_data_textview"
                        android:background="#C0C5C7"/>

                    <RelativeLayout
                        android:id="@+id/everyday_data_select_relativelayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/strip_line1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/select_date_left_point_relativelayout"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/select_date_left_point_image"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/left_point_green"/>
                            </RelativeLayout>


                            <TextView
                                android:id="@+id/selected_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2016-10-21"
                                android:textSize="18dp"
                                />

                            <RelativeLayout
                                android:id="@+id/select_date_right_point_relativelayout"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/select_date_right_point_image"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/right_point_green"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/strip_line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/everyday_data_select_relativelayout"
                        android:background="#C0C5C7"/>

                    <RelativeLayout
                        android:id="@+id/check_total_relativelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_below="@+id/everyday_data_select_relativelayout">

                        <TextView
                            android:id="@+id/check_total_textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="总体考勤情况"
                            android:textSize="18dp"
                            android:textStyle="bold"/>


                        <com.liu.easyoffice.MyView.RoundProgressBar
                            android:id="@+id/roundProgressBar"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_centerInParent="true"
                            android_custom:roundColor="@color/sign_confirm_grey"
                            android_custom:roundProgressColor="@color/green"
                            android_custom:roundWidth="10dip"
                            android_custom:textColor="@color/green"
                            android_custom:textSize="25sp"/>

                    </RelativeLayout>

                    <View
                        android:id="@+id/strip_line3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/check_total_relativelayout"
                        android:background="#C0C5C7"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/total_check_single_condition_linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/everyday_data_title"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/check_number_statistics_relativelayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/check_number_statistics_name_textview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="正常"
                            android:textSize="14dp"/>


                        <com.liu.easyoffice.MyView.CustomStripProgressbarView
                            android:id="@+id/customStripProgressbarViewNormal"
                            android:layout_width="90dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/check_number_statistics_name_textview1"
                            lgy_customStripProgressBar:backColor="@color/sign_confirm_grey"
                            lgy_customStripProgressBar:progressColor="@color/green"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>

                        <com.liu.easyoffice.MyView.CustomStripProgressbarDataView
                            android:id="@+id/customStripProgressbarDataViewNormal"
                            android:layout_width="30dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/customStripProgressbarViewNormal"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/check_number_statistics_relativelayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/check_number_statistics_name_textview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="早退"
                            android:textSize="14dp"/>


                        <com.liu.easyoffice.MyView.CustomStripProgressbarView
                            android:id="@+id/customStripProgressbarViewLeaveEarly"
                            android:layout_width="90dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/check_number_statistics_name_textview2"
                            lgy_customStripProgressBar:backColor="@color/sign_confirm_grey"
                            lgy_customStripProgressBar:progressColor="@color/green"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>

                        <com.liu.easyoffice.MyView.CustomStripProgressbarDataView
                            android:id="@+id/customStripProgressbarDataViewLeaveEarly"
                            android:layout_width="30dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/customStripProgressbarViewLeaveEarly"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>


                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/total_check_single_condition_linearlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_check_single_condition_linearlayout1"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/check_number_statistics_relativelayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/check_number_statistics_name_textview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="迟到"
                            android:textSize="14dp"/>


                        <com.liu.easyoffice.MyView.CustomStripProgressbarView
                            android:id="@+id/customStripProgressbarViewLate"
                            android:layout_width="90dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/check_number_statistics_name_textview3"
                            lgy_customStripProgressBar:backColor="@color/sign_confirm_grey"
                            lgy_customStripProgressBar:progressColor="@color/green"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>

                        <com.liu.easyoffice.MyView.CustomStripProgressbarDataView
                            android:id="@+id/customStripProgressbarDataViewLate"
                            android:layout_width="30dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/customStripProgressbarViewLate"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>



                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/check_number_statistics_relativelayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/check_number_statistics_name_textview4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="旷工"
                            android:textSize="14dp"/>


                        <com.liu.easyoffice.MyView.CustomStripProgressbarView
                            android:id="@+id/customStripProgressbarViewAbsenteeism"
                            android:layout_width="90dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/check_number_statistics_name_textview4"
                            lgy_customStripProgressBar:backColor="@color/sign_confirm_grey"
                            lgy_customStripProgressBar:progressColor="@color/green"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>

                        <com.liu.easyoffice.MyView.CustomStripProgressbarDataView
                            android:id="@+id/customStripProgressbarDataViewAbsenteeism"
                            android:layout_width="30dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/customStripProgressbarViewAbsenteeism"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>


                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/total_check_single_condition_linearlayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_check_single_condition_linearlayout2"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/check_number_statistics_relativelayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/check_number_statistics_name_textview5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="请假"
                            android:textSize="14dp"/>


                        <com.liu.easyoffice.MyView.CustomStripProgressbarView
                            android:id="@+id/customStripProgressbarViewAskforleave"
                            android:layout_width="90dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/check_number_statistics_name_textview5"
                            lgy_customStripProgressBar:backColor="@color/sign_confirm_grey"
                            lgy_customStripProgressBar:progressColor="@color/green"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>

                        <com.liu.easyoffice.MyView.CustomStripProgressbarDataView
                            android:id="@+id/customStripProgressbarDataViewAskforleave"
                            android:layout_width="30dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/customStripProgressbarViewAskforleave"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/check_number_statistics_relativelayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/check_number_statistics_name_textview6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="出差"
                            android:textSize="14dp"/>


                        <com.liu.easyoffice.MyView.CustomStripProgressbarView
                            android:id="@+id/customStripProgressbarViewOnBusiness"
                            android:layout_width="90dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/check_number_statistics_name_textview6"
                            lgy_customStripProgressBar:backColor="@color/sign_confirm_grey"
                            lgy_customStripProgressBar:progressColor="@color/green"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>

                        <com.liu.easyoffice.MyView.CustomStripProgressbarDataView
                            android:id="@+id/customStripProgressbarDataViewOnBusiness"
                            android:layout_width="30dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/customStripProgressbarViewOnBusiness"
                            lgy_customStripProgressBar:strokeWidth="1dp"
                            lgy_customStripProgressBar:textSizeProgress="14sp"/>


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/layout_userful_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/everyday_data_relativelayout">

            </TextView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
