<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_bg_color_selector"
   >





    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/lv_ishenpi_photo"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="10dp"
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_ishenpi_title"
        android:text="鸡的报销"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/lv_ishenpi_photo"
        android:layout_alignTop="@id/lv_ishenpi_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_ishenpi_is"
        android:text="拒绝"
        android:layout_marginLeft="10dp"
        android:textColor="#ccc"
        android:layout_toRightOf="@id/lv_ishenpi_photo"
        android:textSize="17sp"
        android:layout_alignBottom="@id/lv_ishenpi_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_ishenpi_time"
        android:text="2016:09:22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"

        android:textSize="10sp"
        android:layout_alignTop="@id/tv_ishenpi_title"
        android:textColor="#ccc"/>
</RelativeLayout>
